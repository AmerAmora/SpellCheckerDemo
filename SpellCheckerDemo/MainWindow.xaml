<Window x:Class="KeyboardTrackingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KeyboardTrackingApp"
        Title="Spell Check Assistant" Height="200" Width="400" Topmost="True">
    <Grid>
        <TextBlock Name="CurrentWordTextBlock" Margin="10" TextWrapping="Wrap" />
        <Popup Name="SuggestionsPopup" StaysOpen="True" Placement="Bottom">
            <!-- SuggestionsControl will be added programmatically -->
        </Popup>
    </Grid>
</Window>